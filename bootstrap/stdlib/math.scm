; Guage Standard Library: Math Utilities
; Pure symbolic names, named parameters (converted to De Bruijn internally)

; ============================================================================
; List Aggregations
; ============================================================================

; ⊕⊕ :: [ℕ] → ℕ
; Sum - sum of all numbers in list
(≔ ⊕⊕ (λ (lst)
  (((⊕← (λ (a) (λ (b) (⊕ a b)))) #0) lst)))

; ⊗⊗ :: [ℕ] → ℕ
; Product - product of all numbers in list
(≔ ⊗⊗ (λ (lst)
  (((⊕← (λ (a) (λ (b) (⊗ a b)))) #1) lst)))

; ============================================================================
; Binary Comparisons
; ============================================================================

; ↥ :: ℕ → ℕ → ℕ
; Max - maximum of two numbers
(≔ ↥ (λ (b) (λ (a)
  (? (> a b) a b))))

; ↧ :: ℕ → ℕ → ℕ
; Min - minimum of two numbers
(≔ ↧ (λ (b) (λ (a)
  (? (< a b) a b))))

; ============================================================================
; List Min/Max
; ============================================================================

; ↥↥ :: [ℕ] → ℕ | ∅
; Maximum - maximum value in list (returns ∅ if empty)
(≔ ↥↥ (λ (lst)
  (? (∅? lst)
     ∅
     (((⊕← (λ (a) (λ (b) ((↥ b) a)))) (◁ lst)) (▷ lst)))))

; ↧↧ :: [ℕ] → ℕ | ∅
; Minimum - minimum value in list (returns ∅ if empty)
(≔ ↧↧ (λ (lst)
  (? (∅? lst)
     ∅
     (((⊕← (λ (a) (λ (b) ((↧ b) a)))) (◁ lst)) (▷ lst)))))

