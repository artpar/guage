;;;
;;; Test simple lambda application - isolate special-form? issue
;;;

;;; Test 1: Define a simple function that takes car
(define get-first (lambda (x) (car x)))

;;; Test 2: Call it with a list
(print :calling-get-first)
(define test-list (quote (a b c)))
(print test-list)
(print (get-first test-list))

;;; Test 3: Define a function that checks equality
(define is-lambda? (lambda (expr) (equal? (car expr) :lambda)))

;;; Test 4: Call it with quoted lambda
(print :calling-is-lambda)
(define lambda-expr (quote (lambda (:x) :x)))
(print lambda-expr)
(print (is-lambda? lambda-expr))

;;; Test 5: Try special-form? with explicit check
(define special-form-test? (lambda (e)
  (if (null? e)
     #f
     (equal? (car e) :lambda))))

(print :calling-special-form-test)
(print (special-form-test? lambda-expr))
