; Just sort tests
(⋘ "bootstrap/stdlib/list.scm")

(⊨ :sort-ascending
   (⟨⟩ #1 (⟨⟩ #2 (⟨⟩ #3 (⟨⟩ #4 ∅))))
   ((⊴ <′) (⟨⟩ #3 (⟨⟩ #1 (⟨⟩ #4 (⟨⟩ #2 ∅))))))

(⊨ :sort-descending
   (⟨⟩ #4 (⟨⟩ #3 (⟨⟩ #2 (⟨⟩ #1 ∅))))
   ((⊴ >′) (⟨⟩ #3 (⟨⟩ #1 (⟨⟩ #4 (⟨⟩ #2 ∅))))))

(⊨ :sort-already-sorted
   (⟨⟩ #1 (⟨⟩ #2 (⟨⟩ #3 ∅)))
   ((⊴ <′) (⟨⟩ #1 (⟨⟩ #2 (⟨⟩ #3 ∅)))))

(⊨ :sort-single
   (⟨⟩ #1 ∅)
   ((⊴ <′) (⟨⟩ #1 ∅)))

(⊨ :sort-empty
   ∅
   ((⊴ <′) ∅))

(⊨ :sort-duplicates
   (⟨⟩ #1 (⟨⟩ #1 (⟨⟩ #2 (⟨⟩ #3 (⟨⟩ #3 ∅)))))
   ((⊴ <′) (⟨⟩ #3 (⟨⟩ #1 (⟨⟩ #2 (⟨⟩ #3 (⟨⟩ #1 ∅)))))))

(⊨ :sortby-modulo
   (⟨⟩ #4 (⟨⟩ #2 (⟨⟩ #3 (⟨⟩ #1 ∅))))
   ((⊴< (λ (n) (% n #2))) (⟨⟩ #3 (⟨⟩ #1 (⟨⟩ #4 (⟨⟩ #2 ∅))))))

(⊨ :sortby-identity
   (⟨⟩ #1 (⟨⟩ #2 (⟨⟩ #3 ∅)))
   ((⊴< (λ (n) n)) (⟨⟩ #3 (⟨⟩ #1 (⟨⟩ #2 ∅)))))

(⊨ :sortby-empty
   ∅
   ((⊴< (λ (n) n)) ∅))
