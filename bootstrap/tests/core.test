; Core Guage Tests

; Lambda - Identity
(define id (lambda (x) x))
(assert (deep-equal? (id #42) #42) ok)

; Lambda - Const
(define const (lambda (x) (lambda (y) x)))
(assert (deep-equal? ((const #10) #20) #10) ok)

; Arithmetic
(assert (deep-equal? (+ #2 #3) #5) ok)
(assert (deep-equal? (- #10 #3) #7) ok)
(assert (deep-equal? (* #6 #7) #42) ok)
(assert (deep-equal? (/ #84 #2) #42) ok)

; Lambda with arithmetic
(define add1 (lambda (x) (+ x #1)))
(assert (deep-equal? (add1 #41) #42) ok)

; Nested arithmetic in lambda
(define double (lambda (x) (* x #2)))
(assert (deep-equal? (double #21) #42) ok)

; Comparisons
(assert (equal? #42 #42) ok)
(assert (not (equal? #42 #43)) ok)

; Booleans
(assert (and #t #t) ok)
(assert (not (and #t #f)) ok)

; Conditionals
(assert (deep-equal? (if #t #42 #0) #42) ok)
(assert (deep-equal? (if #f #0 #42) #42) ok)
