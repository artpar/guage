;;; Stress: Pattern Matching
;;; Tier 1 — Guards, or-patterns, as-patterns, view patterns, ADT dispatch

;;; --- ADT definitions ---

(⊚≔ :Shape
  (⌜ (:Circle :radius))
  (⌜ (:Rect :width :height))
  (⌜ (:Triangle :base :height))
  (⌜ (:Point))
  (⌜ (:Line :length)))

(⊚≔ :Color
  (⌜ (:Red))
  (⌜ (:Green))
  (⌜ (:Blue))
  (⌜ (:Yellow))
  (⌜ (:Black)))

;;; --- 1. Match against multi-variant ADT, all arms, 10,000 iterations ---

(≔ classify-shape (λ (s)
  (∇ s (⌜ (
    ((⊚ :Shape :Circle r)   :circle)
    ((⊚ :Shape :Rect w h)   :rect)
    ((⊚ :Shape :Triangle b h) :tri)
    ((⊚ :Shape :Point)      :point)
    ((⊚ :Shape :Line l)     :line))))))

(≔ shape-loop (λ (i acc)
  (? (≡ i #0) acc
     (⪢
       (≔ s (? (≡ (% i #5) #0) (⊚ :Shape :Circle #10)
              (? (≡ (% i #5) #1) (⊚ :Shape :Rect #3 #4)
                 (? (≡ (% i #5) #2) (⊚ :Shape :Triangle #5 #6)
                    (? (≡ (% i #5) #3) (⊚ :Shape :Point)
                       (⊚ :Shape :Line #7))))))
       (shape-loop (⊖ i #1) (⊕ acc #1))))))

(⊨ :pattern-adt-10k #10000 (shape-loop #10000 #0))

;;; --- 2. Nested ADT destructuring ---

(⊚≔ :Tree (⌜ (:Leaf :val)) (⌜ (:Node :left :right)))

(≔ tree-sum (λ (t)
  (∇ t (⌜ (
    ((⊚ :Tree :Leaf v)    v)
    ((⊚ :Tree :Node l r)  (⊕ (tree-sum l) (tree-sum r))))))))

;; Build a balanced tree of depth 10 (1023 leaves)
(≔ build-tree (λ (depth)
  (? (≡ depth #0) (⊚ :Tree :Leaf #1)
     (⊚ :Tree :Node (build-tree (⊖ depth #1)) (build-tree (⊖ depth #1))))))

(≔ big-tree (build-tree #10))
(⊨ :pattern-tree-sum #1024 (tree-sum big-tree))

;;; --- 3. Guard evaluation stress: 50,000 iterations ---

(≔ classify-num (λ (n)
  (∇ n (⌜ (
    ((x | (> x #100)) :big)
    ((x | (> x #50))  :medium)
    ((x | (> x #0))   :small)
    (x                 :zero-or-neg))))))

(≔ guard-loop (λ (i acc)
  (? (≡ i #0) acc
     (⪢
       (≔ cls (classify-num i))
       (guard-loop (⊖ i #1) (⊕ acc (? (≡ cls :big) #1 #0)))))))

;; Numbers 101..50000 are :big = 49900
(⊨ :pattern-guard-50k #49900 (guard-loop #50000 #0))

;;; --- 4. Or-pattern with multiple alternatives, 10,000 iterations ---

(≔ is-primary (λ (c)
  (∇ c (⌜ (
    ((⊚ :Color :Red)    #t)
    ((⊚ :Color :Green)  #t)
    ((⊚ :Color :Blue)   #t)
    (_                   #f))))))

(≔ color-loop (λ (i acc)
  (? (≡ i #0) acc
     (⪢
       (≔ c (? (≡ (% i #5) #0) (⊚ :Color :Red)
              (? (≡ (% i #5) #1) (⊚ :Color :Green)
                 (? (≡ (% i #5) #2) (⊚ :Color :Blue)
                    (? (≡ (% i #5) #3) (⊚ :Color :Yellow)
                       (⊚ :Color :Black))))))
       (color-loop (⊖ i #1) (⊕ acc (? (is-primary c) #1 #0)))))))

;; 3 out of every 5 are primary → 10000 * 3/5 = 6000
(⊨ :pattern-or-10k #6000 (color-loop #10000 #0))

;;; --- 5. As-pattern capturing at nesting levels, 5,000 iterations ---

(⊚≔ :Wrapper (⌜ (:Wrap :inner)))

(≔ unwrap-count (λ (w)
  (∇ w (⌜ (
    ((⊚ :Wrapper :Wrap (⊚ :Wrapper :Wrap x)) (⊕ #2 x))
    ((⊚ :Wrapper :Wrap x) (⊕ #1 x))
    (x x))))))

(≔ as-loop (λ (i acc)
  (? (≡ i #0) acc
     (as-loop (⊖ i #1)
       (⊕ acc (unwrap-count (⊚ :Wrapper :Wrap (⊚ :Wrapper :Wrap #1))))))))

;; Each iteration: 2 + 1 = 3; 5000 * 3 = 15000
(⊨ :pattern-as-5k #15000 (as-loop #5000 #0))

;;; --- 6. Pattern match inside recursive function processing list ---

(⊚≔ :Item (⌜ (:Val :n)) (⌜ (:Skip)))

(≔ sum-items (λ (lst)
  (? (∅? lst) #0
     (⊕ (∇ (◁ lst) (⌜ (
           ((⊚ :Item :Val n) n)
           ((⊚ :Item :Skip) #0))))
        (sum-items (▷ lst))))))

;; Build list of 10,000 items alternating Val/Skip
(≔ build-items (λ (i acc)
  (? (≡ i #0) acc
     (build-items (⊖ i #1)
       (⟨⟩ (? (≡ (% i #2) #0) (⊚ :Item :Val i) (⊚ :Item :Skip)) acc)))))

(≔ item-list (build-items #10000 ∅))
(≔ item-sum (sum-items item-list))
(⊨ :pattern-list-sum-positive #t (> item-sum #0))

;;; --- 7. Wildcard-heavy: match only specific fields ---

(⊚≔ :Record (⌜ (:Rec :a :b :c :d :e)))

(≔ get-c (λ (r)
  (∇ r (⌜ (
    ((⊚ :Record :Rec _ _ c _ _) c))))))

(≔ wildcard-loop (λ (i acc)
  (? (≡ i #0) acc
     (wildcard-loop (⊖ i #1)
       (⊕ acc (get-c (⊚ :Record :Rec #1 #2 i #4 #5)))))))

;; sum of 1..50000 = 1250025000
(⊨ :pattern-wildcard-50k #1250025000 (wildcard-loop #50000 #0))
