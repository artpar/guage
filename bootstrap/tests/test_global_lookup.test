;;;
;;; Test global variable lookup through closures
;;;

;;; Test 1: Number global
(define my-num #42)
(print :my-num-direct)
(print my-num)

(define id (lambda (x) x))
(print :my-num-through-closure)
(print (id my-num))

;;; Test 2: Symbol global
(define my-sym :hello)
(print :my-sym-direct)
(print my-sym)
(print :my-sym-through-closure)
(print (id my-sym))

;;; Test 3: List global (not quoted)
(define my-list (cons #1 #2))
(print :my-list-direct)
(print my-list)
(print :my-list-through-closure)
(print (id my-list))

;;; Test 4: Quoted list global
(define my-quoted (quote (a b c)))
(print :my-quoted-direct)
(print my-quoted)
(print :my-quoted-through-closure)
(print (id my-quoted))
